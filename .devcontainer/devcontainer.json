// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.195.0/containers/go
{
	"name": "Go",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			// Update the VARIANT arg to pick a version of Go: 1, 1.16, 1.17
			// Append -bullseye or -buster to pin to an OS version.
			// Use -bullseye variants on local arm64/Apple Silicon.
			"VARIANT": "1.18-bullseye",
			// Options
			"NODE_VERSION": "lts/*"
		}
	},
	// Always run image-defined default command
	"overrideCommand": false,
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		// https://github.com/microsoft/vscode-dev-containers/blob/main/containers/docker-in-docker/README.md
		// Enable docker-in-docker configuration. Comment out if not using for better security.
		"--privileged",
		// Run the entrypoint defined in container image.
		"--init"
	],
	// Uncomment to connect as a non-root user. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode",
	"mounts": [
		// Mount docker-in-docker library volume
		"type=volume,source=dind-var-lib-docker,target=/var/lib/docker",
		// Bind mount docker socket under an alias to support docker-from-docker
		"type=bind,source=/var/run/docker.sock,target=/var/run/docker-host.sock",
	],
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true,
				"go.gopath": "/go",
				"go.goroot": "/usr/local/go"
			},
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"golang.Go",
				"ms-azuretools.vscode-docker",
				"davidanson.vscode-markdownlint",
				"hashicorp.terraform"
			]
		}
	},
	// "postStartCommand": ""
}